# Variáveis de ambiente globais para o Paxos Consensus System

# Debug mode (true/false)
DEBUG=false

# Tempo mínimo e máximo de espera entre pedidos dos clientes (segundos)
CLIENT_MIN_WAIT=1.0
CLIENT_MAX_WAIT=5.0

# Número mínimo e máximo de pedidos a serem enviados pelos clientes
CLIENT_MIN_REQUESTS=10
CLIENT_MAX_REQUESTS=50

# Tempo de expiração para detecção de falhas (segundos)
HEARTBEAT_INTERVAL=5.0
HEARTBEAT_TIMEOUT=15.0